@model ECom.Web.Models.ProductCategory
<form id="frmProductCategory" class="form-horizontal" role="form" asp-controller="Product" asp-action="Save">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function () {
        $("#frmProductCategory").submit(function (event) {
            submitModalForm($(this), event);
        });
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
